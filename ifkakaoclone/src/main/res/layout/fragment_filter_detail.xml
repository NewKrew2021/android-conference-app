                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_SERVICE_BUSINESS, `모빌리티`)}"
                    android:text="@string/filter_keyword_service_and_business_mobility" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_service_and_business_social"
