                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `iOS`)}"
                    android:text="@string/filter_keyword_tech_ios" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_web"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `웹/프론트엔드`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `웹/프론트엔드`)}"
                    android:text="@string/filter_keyword_tech_web" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_windows"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `Windows`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `Windows`)}"
                    android:text="@string/filter_keyword_tech_windows" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_game"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
