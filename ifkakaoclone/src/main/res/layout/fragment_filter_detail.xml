                app:srcCompat="@drawable/ic_baseline_close_24" />

            <TextView
                android:id="@+id/text_filter_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/filter_field_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_close" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_filter_field">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_field_service"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.FIELD, `서비스`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.FIELD, `서비스`)}"
                    android:text="@string/filter_field_service" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_field_business"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.FIELD, `비즈니스`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.FIELD, `비즈니스`)}"
                    android:text="@string/filter_field_business" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_field_tech"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.FIELD, `기술`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.FIELD, `기술`)}"
                    android:text="@string/filter_field_tech" />
            </com.google.android.material.chip.ChipGroup>

