                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `데이터`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `데이터`)}"
                    android:text="@string/filter_keyword_tech_data" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_cloud"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `클라우드`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `클라우드`)}"
                    android:text="@string/filter_keyword_tech_cloud" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_infra"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `인프라/DevOps`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `인프라/DevOps`)}"
                    android:text="@string/filter_keyword_tech_infra" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_block_chain"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `블록체인`)}"
