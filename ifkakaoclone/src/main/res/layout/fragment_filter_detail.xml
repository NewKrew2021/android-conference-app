                app:layout_constraintTop_toBottomOf="@id/chips_keyword_service_and_business" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips_keyword_tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_filter_keyword_tech">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_keyword_tech_backend"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.isSelectedFilter(FilterType.KEYWORD_TECH, `백엔드`)}"
                    android:onClick="@{(view) -> fragment.filterChipClicked(view, FilterType.KEYWORD_TECH, `백엔드`)}"
