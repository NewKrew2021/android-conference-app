<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.widget.ScrollView"/>
        <variable
            name="viewModel"
            type="com.survivalcoding.ifkakao.ui.viewmodel.MainViewModel" />

    </data>

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            tools:context=".ui.view.home.MainFragment">

            <include
                android:id="@+id/include"
                layout="@layout/item_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv_title_poster_main"
                android:layout_width="0dp"
                android:layout_height="@dimen/iv_title_poster_height"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include"
                app:srcCompat="@drawable/ic_main_image" />

            <TextView
                android:id="@+id/tv_highlight_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_24"
                android:text="@string/tv_highlight_main"
                android:textColor="@color/white"
                android:textSize="@dimen/body_24"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_title_poster_main" />

            <Button
                android:id="@+id/btn_all_session_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_24"
                android:layout_marginEnd="@dimen/spacing_16"
                android:backgroundTint="#161616"
                android:text="@string/btn_all_session_main"
                android:textSize="@dimen/body_14"
                android:onClick="@{}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_title_poster_main" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_all_session_main" />

            <TextView
                android:id="@+id/tv_kakao_corp_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_56"
                android:layout_marginBottom="@dimen/spacing_16"
                android:text="@string/tv_kakao_corp_main"
                android:textSize="@dimen/body_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_video_main" />

            <ImageButton
                android:id="@+id/iv_up_scroll_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_56"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:background="#000000"
                android:src="@drawable/ic_baseline_arrow_upward_24"
                android:onClick="@{() -> svMain.fullScroll(ScrollView.FOCUS_UP)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>