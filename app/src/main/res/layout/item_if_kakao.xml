<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item_data"
            type="com.survivalcoding.ifkakao.ifkakao.model.Data" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/session_item"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        tools:background="@color/black">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{item_data.linkList.MO_IMAGE[0].url}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/divide_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_length_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="@{item_data.linkList.VIDEO[0].description}"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/thumbnail"
            app:layout_constraintEnd_toEndOf="@id/thumbnail"
            tools:text="21:30" />

        <TextView
            android:id="@+id/field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border_color"
            android:gravity="bottom"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="@{item_data.field}"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/divide_vertical"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            tools:text="서비스" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{item_data.title}"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/divide_vertical"
            app:layout_constraintTop_toBottomOf="@id/field"
            tools:text="오프닝 키노트" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/divide_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>