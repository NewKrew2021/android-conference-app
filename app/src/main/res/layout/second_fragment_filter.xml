                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background='@{MapExtensionKt.find(viewmodel.filters, FilterType.TECH, "EmbeddedSystem") ? @drawable/content_filter_item_clicked_border : @drawable/content_filter_item_border}'
                        android:onClick='@{()->fragment.filterClickListener(FilterType.TECH, "EmbeddedSystem")}'
                        android:text="EmbeddedSystem"
                        android:textColor='@{MapExtensionKt.find(viewmodel.filters, FilterType.TECH, "EmbeddedSystem") ? @color/black : @color/white}'
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background='@{MapExtensionKt.find(viewmodel.filters, FilterType.TECH, "기타") ? @drawable/content_filter_item_clicked_border : @drawable/content_filter_item_border}'
                        android:onClick='@{()->fragment.filterClickListener(FilterType.TECH, "기타")}'
                        android:text="기타"
                        android:textColor='@{MapExtensionKt.find(viewmodel.filters, FilterType.TECH, "기타") ? @color/black : @color/white}'
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/gray"
            android:paddingVertical="16dp"
            android:text="초기화"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/blue"
            android:paddingVertical="16dp"
            android:text="적용"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide_0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>