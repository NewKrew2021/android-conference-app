<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.survivalcoding.ifkakao.ifkakao.model.speakermodel.PresenterInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="@color/black">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/presenter_thumbnail"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                app:presenterImageUrl="@{presenter.url}"
                tools:src="@drawable/ic_launcher_foreground" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:nameEn="@{presenter.contentsSpeacker.nameEn}"
                app:nameKo="@{presenter.contentsSpeacker.nameKo}"
                tools:text="여민수" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{presenter.contentsSpeacker.company}"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="카카오" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{presenter.contentsSpeacker.occupation}"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="CEO" />

        </LinearLayout>


    </LinearLayout>

</layout>