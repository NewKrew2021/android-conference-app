<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="session"
            type="com.survivalcoding.ifkakao.data.model.response.ConferenceSessionResponse" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="@dimen/iv_thumbnail_session_width"
            android:layout_height="@dimen/iv_thumbnail_session_height"
            android:layout_marginTop="@dimen/spacing_16"
            android:layout_marginBottom="@dimen/spacing_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_thumbnail_session"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_image"
                android:scaleType="fitXY"
                app:bindSessionVideoThumbnail="@{session.parseImageUrl(session)}"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_running_time_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="#373737"
                android:paddingStart="3dp"
                android:paddingTop="2dp"
                android:paddingEnd="3dp"
                android:paddingBottom="2dp"
                android:text="@{session.parseRunningTime(session)}"
                android:textColor="@color/white"
                android:textSize="@dimen/body_12" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_field_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_16"
            android:background="@drawable/stroke_white_1dp"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="@{session.parseString(session.field)}"
            android:textColor="@color/white"
            android:textSize="@dimen/body_14"
            app:layout_constraintStart_toEndOf="@id/frame_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_8"
            android:text="@{session.parseString(session.title)}"
            android:textColor="@color/white"
            android:textSize="@dimen/body_14"
            app:layout_constraintStart_toEndOf="@id/frame_layout"
            app:layout_constraintTop_toBottomOf="@+id/tv_field_session" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
