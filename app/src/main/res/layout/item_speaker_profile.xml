<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="imgUrl"
            type="String" />

        <variable
            name="contentsSpeacker"
            type="com.survivalcoding.ifkakao.model.ContentsSpeacker" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@color/design_default_color_error"
                app:imgUrl="@{imgUrl}" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{contentsSpeacker.nameKo + ' ' + contentsSpeacker.nameEn}}"
                android:textStyle="bold"
                tools:text="오준석 John" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{contentsSpeacker.company}"
                android:textColor="#A5A5A5"
                android:textStyle="bold"
                tools:text="생존코딩" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{contentsSpeacker.occupation}"
                android:textColor="#A5A5A5"
                android:textStyle="bold"
                tools:text="CEO" />

        </LinearLayout>

    </LinearLayout>
</layout>