<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.survivalcoding.ifkakao.second.extension.StringExtensionKt" />

        <variable
            name="contentdata"
            type="com.survivalcoding.ifkakao.second.model.ContentData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/content_thumbnail_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="1dp"
            app:layout_constraintWidth_percent="0.3"
            app:url="@{contentdata.linkList.pcImage[0].url}"
            app:round="@{16.0f}"
            tools:src="@drawable/thumbnail_placeholder" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/thumbnail_image"
            app:layout_constraintEnd_toEndOf="@id/thumbnail_image"
            android:background="@drawable/content_description_border"
            tools:text="08:27"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textSize="12dp"
            android:text="@{contentdata.linkList.video[0].description}"
            tools:textColor="@color/white" />

        <TextView
            android:id="@+id/field_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/thumbnail_image"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/thumbnail_image"
            android:background="@drawable/content_field_border"
            android:text="@{contentdata.field}"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textSize="12dp"
            tools:text="서비스" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:text="@{StringExtensionKt.removeTag(contentdata.title)}"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/thumbnail_image"
            app:layout_constraintTop_toBottomOf="@id/field_text"
            android:layout_marginStart="10dp"
            tools:text="오프닝 키노트" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/thumbnail_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>