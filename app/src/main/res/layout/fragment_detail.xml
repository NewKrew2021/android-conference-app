<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="session"
            type="com.survivalcoding.ifkakao.model.Session" />

        <variable
            name="viewModel"
            type="com.survivalcoding.ifkakao.ui.detail.DetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:descendantFocusability="blocksDescendants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail"
                    videoImageUrl="@{session.linkList.mobileImage[0].url}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/video_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_view"
                    android:onClick="@{() -> viewModel.openVideoLink(session)}"
                    android:src="@drawable/ic_baseline_play_arrow_48"
                    app:layout_constraintBottom_toBottomOf="@id/thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_x_small"
                    android:background="@drawable/view_white_border"
                    android:padding="2dp"
                    android:text="@{session.field}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_x_small"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    app:layout_constraintBottom_toBottomOf="@id/field"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/field" />

                <TextView
                    android:id="@+id/title"
                    style="@style/DetailSessionTextView"
                    android:layout_width="match_parent"
                    android:text="@{session.title}"
                    android:textSize="@dimen/detail_title_size"
                    app:layout_constraintTop_toBottomOf="@id/field" />

                <TextView
                    android:id="@+id/content"
                    style="@style/DetailSessionTextView"
                    android:layout_width="match_parent"
                    android:text="@{session.content}"
                    android:textSize="@dimen/content_size"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <TextView
                    android:id="@+id/content_tag"
                    style="@style/DetailSessionTextView"
                    android:layout_width="match_parent"
                    android:text="@{session.contentTag}"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/content"
                    app:layout_goneMarginTop="@dimen/margin_small" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/speakers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/content_tag" />

                <Button
                    android:id="@+id/back_button"
                    android:layout_width="128dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:backgroundTint="@color/dark_grey"
                    android:onClick="@{() -> viewModel.popThisFragment()}"
                    android:text="목록보기"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/speakers" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>